{
  "name": "hexlet/code",
  "description": "Page Analyzer for Hexlet",
  "type": "project",
  "require": {
    "php": "^8.1",
    "slim/slim": "^4.0",
    "slim/psr7": "^1.6"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.7"
  },
  "autoload": {
    "psr-4": {
      "Hexlet\\Code\\": "src/"
    }
  },
  "scripts": {
    "lint": "phpcs --standard=PSR12 public/ tests/",
    "lint-fix": "phpcbf --standard=PSR12 public/ tests/"
  }
}