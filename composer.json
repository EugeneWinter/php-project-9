{
    "name": "hexlet/code",
    "description": "Hexlet project",
    "type": "project",
    "require": {
        "slim/slim": "^4.14",
        "slim/psr7": "^1.7",
        "slim/php-view": "^3.4",
        "vlucas/valitron": "^1.4",
        "nesbot/carbon": "^3.10",
        "illuminate/support": "^12.18",
        "vlucas/phpdotenv": "^5.6",
        "slim/http": "^1.4",
        "illuminate/collections": "^12.18",
        "php-di/php-di": "^7.0",
        "guzzlehttp/guzzle": "^7.9",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpcbf": "phpcbf",
        "post-install-cmd": [
            "@composer dump-autoload -o"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "platform": {
            "php": "8.2"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    }
}
